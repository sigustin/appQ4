<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.grz.sinf1225.uclove1.Profile.EditVisibilityActivity">

        <TextView
            android:id="@+id/first_name_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:text="@string/first_name"/>

        <Spinner
            android:id="@+id/spinner_first_name"

            android:layout_width="@dimen/spinner_list_width"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"/>

        <!-- separator -->
        <View
            android:id="@+id/separator2"

            android:layout_width="match_parent"
            android:layout_height="@dimen/list_separator_thickness"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/first_name_label"

            android:layout_marginLeft="@dimen/list_separator_margins"
            android:layout_marginStart="@dimen/list_separator_margins"
            android:layout_marginRight="@dimen/list_separator_margins"
            android:layout_marginEnd="@dimen/list_separator_margins"

            android:background="@color/gray" />

        <TextView
            android:id="@+id/family_name_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:text="@string/family_name"/>

        <Spinner
            android:id="@+id/spinner_family_name"

            android:layout_width="@dimen/spinner_list_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"/>


        <!-- separator -->
        <View
            android:id="@+id/separator3"

            android:layout_width="match_parent"
            android:layout_height="@dimen/list_separator_thickness"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/family_name_label"

            android:layout_marginLeft="@dimen/list_separator_margins"
            android:layout_marginStart="@dimen/list_separator_margins"
            android:layout_marginRight="@dimen/list_separator_margins"
            android:layout_marginEnd="@dimen/list_separator_margins"

            android:background="@color/gray" />

        <TextView
            android:id="@+id/birth_date_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:text="@string/birth_date"/>

        <Spinner
            android:id="@+id/spinner_birth_date"

            android:layout_width="@dimen/spinner_list_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:inputType="date"/>

        <!-- separator -->
        <View
            android:id="@+id/separator4"

            android:layout_width="match_parent"
            android:layout_height="@dimen/list_separator_thickness"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/birth_date_label"

            android:layout_marginLeft="@dimen/list_separator_margins"
            android:layout_marginStart="@dimen/list_separator_margins"
            android:layout_marginRight="@dimen/list_separator_margins"
            android:layout_marginEnd="@dimen/list_separator_margins"

            android:background="@color/gray" />

        <TextView
            android:id="@+id/gender_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:text="@string/gender"/>

        <Spinner
            android:id="@+id/spinner_gender"

            android:layout_width="@dimen/spinner_list_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"/>

        <!-- separator -->
        <View
            android:id="@+id/separator5"

            android:layout_width="match_parent"
            android:layout_height="@dimen/list_separator_thickness"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/gender_label"

            android:layout_marginLeft="@dimen/list_separator_margins"
            android:layout_marginStart="@dimen/list_separator_margins"
            android:layout_marginRight="@dimen/list_separator_margins"
            android:layout_marginEnd="@dimen/list_separator_margins"

            android:background="@color/gray" />

        <TextView
            android:id="@+id/love_status_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:text="@string/love_status"/>


        <Spinner
            android:id="@+id/spinner_love_status"

            android:layout_width="@dimen/spinner_list_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"/>

        <!-- separator -->
        <View
            android:id="@+id/separator7"

            android:layout_width="match_parent"
            android:layout_height="@dimen/list_separator_thickness"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/love_status_label"

            android:layout_marginLeft="@dimen/list_separator_margins"
            android:layout_marginStart="@dimen/list_separator_margins"
            android:layout_marginRight="@dimen/list_separator_margins"
            android:layout_marginEnd="@dimen/list_separator_margins"

            android:background="@color/gray" />

        <TextView
            android:id="@+id/height_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:text="@string/height"/>

        <Spinner
            android:id="@+id/spinner_height"

            android:layout_width="@dimen/spinner_list_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:inputType="number"/>

        <!-- separator -->
        <View
            android:id="@+id/separator9"

            android:layout_width="match_parent"
            android:layout_height="@dimen/list_separator_thickness"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/height_label"

            android:layout_marginLeft="@dimen/list_separator_margins"
            android:layout_marginStart="@dimen/list_separator_margins"
            android:layout_marginRight="@dimen/list_separator_margins"
            android:layout_marginEnd="@dimen/list_separator_margins"

            android:background="@color/gray" />

        <TextView
            android:id="@+id/smoker_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:text="@string/smoker"/>

        <Spinner
            android:id="@+id/spinner_smoker"

            android:layout_width="@dimen/spinner_list_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator9"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal" />


        <!-- separator -->
        <View
            android:id="@+id/separator10"

            android:layout_width="match_parent"
            android:layout_height="@dimen/list_separator_thickness"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/smoker_label"

            android:layout_marginLeft="@dimen/list_separator_margins"
            android:layout_marginStart="@dimen/list_separator_margins"
            android:layout_marginRight="@dimen/list_separator_margins"
            android:layout_marginEnd="@dimen/list_separator_margins"

            android:background="@color/gray" />

        <TextView
            android:id="@+id/children_nb_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:text="@string/children_nb"/>

        <Spinner
            android:id="@+id/spinner_children_nb"

            android:layout_width="@dimen/spinner_list_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:inputType="number"/>

        <!-- separator -->
        <View
            android:id="@+id/separator12"

            android:layout_width="match_parent"
            android:layout_height="@dimen/list_separator_thickness"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/children_nb_label"

            android:layout_marginLeft="@dimen/list_separator_margins"
            android:layout_marginStart="@dimen/list_separator_margins"
            android:layout_marginRight="@dimen/list_separator_margins"
            android:layout_marginEnd="@dimen/list_separator_margins"

            android:background="@color/gray" />

        <TextView
            android:id="@+id/city_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"

            android:text="@string/city"/>

        <Spinner
            android:id="@+id/spinner_city"

            android:layout_width="@dimen/spinner_list_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingLeft="@dimen/list_item_padding_horizontal"
            android:paddingRight="@dimen/list_item_padding_horizontal"/>

    </RelativeLayout>

</ScrollView>
