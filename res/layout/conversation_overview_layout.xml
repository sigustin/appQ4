<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/conversation_overview_relative_layout"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/conversation_overview_box"

        android:layout_width="match_parent"
        android:layout_height="@dimen/small_profile_picture_edge_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"

        android:layout_marginBottom="@dimen/box_spacing_vertical"

        android:background="@color/white"
        android:elevation="@dimen/view_elevation" />

    <ImageView
        android:id="@+id/profile_picture"

        android:layout_width="@dimen/small_profile_picture_edge_size"
        android:layout_height="@dimen/small_profile_picture_edge_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"

        android:padding="@dimen/profile_picture_padding"

        android:elevation="@dimen/view_elevation"

        android:src="@drawable/ic_person_black_48dp" />

    <TextView
        android:id="@+id/pseudo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"

        android:layout_marginTop="@dimen/textview_title_margin_vertical"
        android:layout_marginBottom="@dimen/textview_margin_vertical"
        android:layout_marginLeft="@dimen/textview_margin_horizontal" android:layout_marginStart="@dimen/textview_margin_horizontal"
        android:layout_marginRight="@dimen/textview_margin_horizontal" android:layout_marginEnd="@dimen/textview_margin_horizontal"

        android:elevation="@dimen/view_elevation"

        android:textStyle="bold"
        android:text="@string/pseudo" />

    <TextView
        android:id="@+id/last_message"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pseudo"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"

        android:layout_marginTop="@dimen/textview_margin_vertical"
        android:layout_marginBottom="@dimen/textview_margin_vertical"
        android:layout_marginLeft="@dimen/textview_margin_horizontal" android:layout_marginStart="@dimen/textview_margin_horizontal"
        android:layout_marginRight="@dimen/textview_margin_horizontal" android:layout_marginEnd="@dimen/textview_margin_horizontal"

        android:elevation="@dimen/view_elevation"

        android:text="@string/last_message" />

</RelativeLayout>